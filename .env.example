export TEMPORAL_UI_PORT=8080
export TEMPORAL_PORT=7233
export TEMPORAL_DB_FILE="temporal.db"
export TEMPORAL_NAMESPACE="default"
export TEMPORAL_ADDRESS="localhost:7233"

